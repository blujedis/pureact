{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist/cjs",
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react-native",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}